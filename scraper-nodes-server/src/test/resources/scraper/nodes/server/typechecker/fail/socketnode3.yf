---
name: socket
graphs:
  start:
    - { type: Echo , put: initial, value: 42 }

    - type: Socket
      # this is initial :: String because its separate from the forwarding
      expected: "{expect}"
      # both request and request2 should provide initial :: String
      hostMap:
        request: request
        request2: request2

    # this has nothing to do with requests going off the socket
    # so {initial} :: Integer
    - type: IntToString
      integer: "{initial}"
      string: "_"

  request:
    - type: Echo
      put: expect
      value: "1"

  request2:
    - type: Echo
      put: expect
      value: 1


